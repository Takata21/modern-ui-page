<style>
  .gpt3__header {
    display: flex;
    padding: 2rem 6rem;
  }

  .gtp3__header-content {
    flex: 1 1;
    display: flex;
    /* justify-content: center; */
    align-items: flex-start;
    flex-direction: column;
    margin-right: 5rem;
  }

  .gpt3__header-title {
    font-weight: 700;
    font-size: 62px;
    background: var(--gradient-text);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    letter-spacing: -0.04em;
  }

  .gpt3_header-desc {
    margin-top: 33px;
    color: #81afdd;
    font-weight: 400;
    font-size: 20px;
  }

  .gpt3__header-content_input {
    display: flex;
    width: 100%;
    margin: 2rem 0 1rem;
    background-color: #052d56;
  }

  .gpt3__header-content_input input {
    flex: 2 1;
    width: 100%;
    min-height: 50px;
    padding: 0 1rem;
    font-style: normal;
    font-weight: 400;
    font-size: 20px;
    line-height: 28px;
    color: #fff;
    background-color: transparent;
    border: 2px solid var(--color-footer);
    border-radius: 5px 0px 0px 5px;
    outline: none;
  }

  .gpt3__header-content_input input::placeholder {
    color: #3d6184;
  }

  .gpt3__header-content_input button {
    flex: 1;
    height: 100%;
    border: none;
    padding: 0 1rem;
    font-weight: 700;
    font-size: 20px;
    color: #fff;
    background: #ff4820;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    cursor: pointer;
  }

  .gpt3__header-content_people {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .gpt3__header-content_people small {
    font-weight: 500;
    font-size: 12px;
    color: #fff;
  }

  .gtp3__header-img_container {
    display: flex;
    flex: 1 1;
    justify-content: center;
    align-items: center;
  }

  .gtp3__header-img_container img {
    width: 100%;
    height: 100%;
  }
</style>
